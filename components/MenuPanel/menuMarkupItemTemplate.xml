<?xml version="1.0" encoding="utf-8" ?>

<component name="menuMarkupItemTemplate" extends="Group" >

  <interface>
      <field id="itemContent" type="node"/>
      <field id="itemHasFocus" type="boolean"/>
      <field id="width" type="float"/>
      <field id="height" type="float"/>
      <field id="showTitle" type="Boolean" alwaysNotify="true"/>
  </interface>

  	<script type="text/brightscript" uri="pkg:/components/MenuPanel/menuMarkupItemTemplate.brs" />
    <script type="text/brightscript" uri="pkg:/locale/default/fonts/fonts.brs"/>
    <children>
        <LayoutGroup id="menuLayout" layoutDirection="horiz" itemSpacings="[40]" translation="[0,0]">
            <Rectangle
              id="IconBase"
              color="#00000000"
              width="42"
              height="42">
              <Poster
                  id="Icon"                 
                  width = "42"
                  height= "42" />
            </Rectangle>
            <Rectangle
              id="titleBase"
              color="#15151500"
              height="42">
                <ScrollingLabel
                    id="Title"
                    color="#000000"
                    vertAlign="center"
                    horizAlign = "left"
                    />
            </Rectangle>
        </LayoutGroup>
    </children>
</component>
