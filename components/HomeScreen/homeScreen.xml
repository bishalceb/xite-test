    <interface>

      <field id="contentNode" type="assocArray" alwaysNotify="true"/>
      <field id="menuData" type="assocArray" alwaysNotify="true"/>
      <field id="focusedNode" type="node" alwaysNotify="true"/>
      <field id="selectedEvent" type="assocArray" alwaysNotify="true"/>
