                              <Label id="Title" horizAlign="center" vertAlign="center" />
                              <LayoutGroup id="metaDataLayout" layoutDirection="vert" itemSpacings="[05]">
                                  <LayoutGroup id="infoLineLayout" layoutDirection="horiz" itemSpacings="[20]">
                                      <Label id="lblReleaseDate" horizAlign="center" vertAlign="top" />
                                      <Label id="lblDuration" horizAlign="center" vertAlign="top" />
                                      <!-- <Rectangle id="ratingsUpRect" width ="10" height="10" color="#00000000" >
