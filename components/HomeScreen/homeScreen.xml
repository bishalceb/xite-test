                                            <poster id="icon_thumbsDown" visible="false"/>
                                            <Label id="lblThumbsDown" horizAlign="left" vertAlign="center"  />
                                        </LayoutGroup>
                                      </Rectangle> -->
                                  </LayoutGroup>
                                  <!-- <LayoutGroup id="genreLayout" layoutDirection="horiz">
                                      <Label id="lblGenre" horizAlign="left" vertAlign="top" />
                                  </LayoutGroup> -->
                              </LayoutGroup>
                              <Label id="lblDescription" horizAlign="left" lineSpacing="1" maxLines ="4"/>
                          </LayoutGroup>

                      <!-- </Rectangle> -->

                  </LayoutGroup>
                  <RowList
                    id="RowList"
                    numRows="2"
                    rowFocusAnimationStyle="floatingFocus"
                    rowItemSpacing="[[30,0]]"
                    itemSpacing="[0,80]"
                    rowSpacings="[80,80,80,80]"
                    rowLabelOffset="[[0,10],[0,10],[0,10],[0,10],[0,10]]"
                    showRowLabel="[true,true]"
                    showRowCounter ="[true,true,true,true]"
                    inheritParentOpacity="false"/>
                <MenuPanel id="menuPanel" visible="false"/>

              </poster>

              <poster id="imgLogo"
                translation = "[1280, 10]"
                visible="false"  />


        </poster>
